<?xml version="1.0" encoding="utf-8"?>
<extension type="module"
        version="2.5"
        client="administrator"
        method="upgrade"
        >
    <name>mod_ccc_matukio_promotion</name>
    <author>compojoom.com</author>
    <creationDate>2012-10-24</creationDate>
    <copyright>Copyright (C) 2012 Yves Hoppe - compojoom.com. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>yves@compojoom.com</authorEmail>
    <authorUrl>compojoom.com</authorUrl>
    <version>2.1.3</version>
    <description>MOD_CCC_MATUKIO_PROMOTION_XML_DESCRIPTION</description>
    <files>
        <file>helper.php</file>
<file>index.html</file>
<file module="mod_ccc_matukio_promotion">mod_ccc_matukio_promotion.php</file>
<folder>tmpl</folder>
    </files>
    <languages folder="administrator/language">
        <language tag="de-DE">de-DE/de-DE.mod_ccc_matukio_promotion.ini</language>
<language tag="en-GB">en-GB/en-GB.mod_ccc_matukio_promotion.ini</language>
    </languages>
    <media destination="mod_ccc_matukio_promotion" folder="media/mod_ccc_matukio_promotion">
        <folder>images</folder>
<file>index.html</file>
<folder>js</folder>
    </media>
    <help key="CCC_MODULE_PROMOTION" />
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="imagepath"
                        type="text"
                        default="/media/mod_ccc_matukio_promotion/images/"
                        label="MOD_CCC_MATUKIO_PROMOTION_IMAGES"
                        description="MOD_CCC_MATUKIO_PROMOTION_IMAGES_DESC" />
                <field
                        name="linklist"
                        type="text"
                        default="/media/mod_ccc_matukio_promotion/images/linklist.txt"
                        label="MOD_CCC_MATUKIO_PROMOTION_LINKLIST"
                        description="MOD_CCC_MATUKIO_PROMOTION_LINKLIST_DESC" />
                </fieldset>
            <fieldset name="advanced">
                <field
                        name="layout"
                        type="modulelayout"
                        label="JFIELD_ALT_LAYOUT_LABEL"
                        description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

                <field
                        name="moduleclass_sfx"
                        type="text"
                        label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

                <field
                        name="cache"
                        type="list"
                        default="0"
                        label="COM_MODULES_FIELD_CACHING_LABEL"
                        description="COM_MODULES_FIELD_CACHING_DESC">
                    <option
                            value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>

                <field
                        name="automatic_title"
                        type="radio"
                        default="0"
                        label="COM_MODULES_FIELD_AUTOMATIC_TITLE_LABEL"
                        description="COM_MODULES_FIELD_AUTOMATIC_TITLE_DESC">
                    <option
                            value="0">JNO</option>
                    <option
                            value="1">JYES</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
